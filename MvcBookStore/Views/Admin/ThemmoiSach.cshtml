@model MvcBookStore.Models.SACH

@{
    ViewBag.Title = "Thêm mới sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* Add your custom styles here */
    .form-container {
        max-width: 600px;
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #333;
        text-align: center;
    }

    /* Style for form labels */
    .form-horizontal label {
        margin-top: 10px;
        font-weight: bold;
        color: #555;
    }

    /* Style for form inputs */
    .form-horizontal input[type="text"],
    .form-horizontal input[type="number"],
    .form-horizontal input[type="date"],
    .form-horizontal select {
        width: 100%;
        padding: 8px;
        margin: 6px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
        border-radius: 4px;
    }

    /* Style for submit button */
    .form-horizontal .btn-submit {
        background-color: #4CAF50; /* Green color */
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s; /* Add a smooth transition */
    }

        .form-horizontal .btn-submit:hover {
            background-color: #45a049; /* Darker green color on hover */
        }
    /* Style for "Quay lại danh sách" link */
    .form-horizontal .btn-back {
        color: #fff; /* White color */
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
        text-align: center;
        padding: 10px 15px;
        background-color: #f00; /* Red color */
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s; /* Add a smooth transition */
    }

        .form-horizontal .btn-back:hover {
            background-color: #f7941d; /* Darker orange color on hover */
        }
</style>
<!-- ... Existing code ... -->

<div class="form-container">
    <h2>Thêm mới sách</h2>
    <br />

    @using (Html.BeginForm("ThemmoiSach", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <h4>Thông tin sách</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Tensach -->
        <div class="form-group">
            @Html.LabelFor(model => model.Tensach, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Giaban -->
        <div class="form-group">
            @Html.LabelFor(model => model.Giaban, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Mota -->
        <div class="form-group">
            @Html.LabelFor(model => model.Mota, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>


        <!-- Soluongton -->
        <div class="form-group">
            @Html.LabelFor(model => model.Soluongton, "Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ngaycapnhat -->
        <div class="form-group">
            <span class="control-label col-md-2">Ngày cập nhật:</span>
            <div class="col-md-10">
                <input type="date" name="Ngaycapnhat" />
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- MaLoai -->
        <div class="form-group">
            <span class="control-label col-md-2">Loại sách:</span>
            <div class="col-sm-12">
                @Html.DropDownList("MaLoai")
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- MaNXB -->
        <div class="form-group">
            <span class="control-label col-md-2">Nhà xuất bản:</span>
            <div class="col-sm-12">
                @Html.DropDownList("MaNXB")
                @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Anhbia -->
        <div class="form-group">
            @Html.LabelFor(model => model.Anhbia, "Ảnh bìa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                @Html.ValidationMessageFor(model => model.Anhbia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(ViewBag.Thongbao))
                {
                    <p class="text-danger">@ViewBag.Thongbao</p>
                }
                <button type="submit" class="btn btn-submit">Thêm mới</button>
                @Html.ActionLink("Quay lại danh sách", "Sach", null, new { @class = "btn btn-back" })
            </div>
        </div>
    }
</div>
