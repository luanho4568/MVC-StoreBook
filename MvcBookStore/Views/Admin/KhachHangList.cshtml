@model List<MvcBookStore.Models.KHACHHANG>
@{
    ViewBag.Title = "Xem Thông Tin Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    h2 {
        color: #007bff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn {
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    .action-buttons {
        text-align: center;
    }

        .action-buttons a {
            margin-right: 10px;
        }

            /* Button colors for action links */
            .action-buttons a.btn-info {
                background-color: #28a745;
                color: #fff;
            }

            .action-buttons a.btn-primary {
                background-color: #dc3545;
                color: #fff;
            }
</style>

<h2>Thông Tin Khách Hàng</h2>
<table class="table">
    <tr>
        <th>Tên Khách Hàng</th>
        <th>Thao tác</th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.HoTen</td>
            <td>
                @Html.ActionLink("Chi tiết", "ChiTietKhachHang", new { id = customer.MaKH }) |
                @Html.ActionLink("Đơn hàng", "DonHangKhachHang", new { id = customer.MaKH })
            </td>
        </tr>
    }
</table>

